@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

		<!--begin::Wrapper-->
					<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
						<!--begin::Form-->
                        <section>
						<form class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate" id="account" method="post">
							<!--begin::Heading-->
							<div class="text-center mb-10">
								<!--begin::Title-->
								<h1 class="text-dark mb-3">Đăng Nhập tài khoản</h1>
                                <div asp-validation-summary="All" class="text-danger"></div>
								<!--end::Title-->
								<!--begin::Link-->
								<div class="text-gray-400 fw-bold fs-4">Mới vô?
								 <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary fw-bolder">Tạo tài khoản</a></div>
								<!--end::Link-->
							</div>
							<!--begin::Heading-->
							<!--begin::Input group-->
							<div class="fv-row mb-10 fv-plugins-icon-container">
								<!--begin::Label-->
								<label class="form-label fs-6 fw-bolder text-dark">Email</label>
                                  <input asp-for="Input.Email" class="form-control form-control-lg form-control-solid"  />
                                   <span asp-validation-for="Input.Email" class="text-danger"></span>
								<!--end::Label-->
							<div class="fv-plugins-message-container invalid-feedback"></div></div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="fv-row mb-10 fv-plugins-icon-container">
								<!--begin::Wrapper-->
								<div class="d-flex flex-stack mb-2">
									<!--begin::Label-->
									<label class="form-label fw-bolder text-dark fs-6 mb-0">Password</label>
									<!--end::Label-->
									<!--begin::Link-->
									<a id="forgot-password" asp-page="./ForgotPassword" class="link-primary fs-6 fw-bolder">Quên mật khẩu ?</a>
									<!--end::Link-->
								</div>
								<!--end::Wrapper-->
								<!--begin::Input-->
                                   <input asp-for="Input.Password"class="form-control form-control-lg form-control-solid"  />
                                   <span asp-validation-for="Input.Password" class="text-danger"></span>
								<!--end::Input-->
							<div class="fv-plugins-message-container invalid-feedback"></div></div>
							<!--end::Input group-->
							<!--begin::Actions-->
                             <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
							<div class="text-center">
								<!--begin::Submit button-->
								<button type="submit" id="kt_sign_in_submit" class="btn btn-lg btn-primary w-100 mb-5">
									<span class="indicator-label">Đăng nhập</span>
									<span class="indicator-progress">Please wait...
									<span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
								</button>
								<!--end::Submit button-->
						</div>
                        </form>
                        </section>
						<!--end::Form-->
					</div>
					<!--end::Wrapper-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
